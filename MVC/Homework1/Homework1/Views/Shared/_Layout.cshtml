<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">WebSiteName</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="@Url.Action("Index", "Home")">@Resources.Resource.Home</a></li>
                <li><a href="@Url.Action("ProductsView", "Products")">@Resources.Resource.Products</a></li>
                <li><a href="@Url.Action("Info", "Customers")">@Resources.Resource.Clients</a></li>
                <li>
                    <div>
                        @using (Html.BeginForm("ChangeCulture", "Home"))
                        {
                            <select class="myinput" name="lang">
                                <option disabled selected>@Resources.Resource.ChooseLang</option>
                                <option value="ru">Русский</option>
                                <option value="en">English</option>
                            </select>
                            <input class="btn btn-default" type="submit" name="submit" value="@Resources.Resource.ChooseLang">
                        }
                    </div>
                </li>
            </ul>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <footer class="col-lg-10">
            <hr />
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>