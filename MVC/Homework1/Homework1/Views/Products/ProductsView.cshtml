@model IEnumerable<Homework1.Models.Products>

@{
    ViewBag.Title = "ProductsView";
}

<h2>ProductsView</h2>

<style>
    .item 
    {
        margin: 20px;
        border: 1px solid #000000;
        border-style: outset;
    }
</style>

<div class="container-fluid">
    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-lg-5 well item">
               <span>ID: @p.ProductId</span>
               <br />
                <strong>@p.ProductName</strong>
            </div>
        }
    </div>
</div>

