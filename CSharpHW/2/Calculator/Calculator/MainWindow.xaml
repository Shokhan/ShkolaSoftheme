        <Button x:Name="two" Content="2" HorizontalAlignment="Left" Margin="129,77,0,0" VerticalAlignment="Top" Width="75" Click="two_Click"/>
        <Button x:Name="five" Content="5" HorizontalAlignment="Left" Margin="129,102,0,0" VerticalAlignment="Top" Width="75" Click="five_Click"/>
        <Button x:Name="eight" Content="8" HorizontalAlignment="Left" Margin="129,127,0,0" VerticalAlignment="Top" Width="75" Click="eight_Click"/>
        <Button x:Name="three" Content="3" HorizontalAlignment="Left" Margin="218,77,0,0" VerticalAlignment="Top" Width="75" Click="three_Click"/>
        <Button x:Name="six" Content="6" HorizontalAlignment="Left" Margin="218,102,0,0" VerticalAlignment="Top" Width="75" Click="six_Click"/>
        <Button x:Name="nine" Content="9" HorizontalAlignment="Left" Margin="218,127,0,0" VerticalAlignment="Top" Width="75" Click="nine_Click"/>
